<% flash.each do |_type, msg| %>
  <p class="text-danger mt-2"><%= msg %></p>
<% end %>

<div class="col-8 m-auto">
  <%= form_with url: result_path, id: "form" do |form| %>
    <div class="form-group row my-3">
      <%=  form.label :input1, "Value 1:", class: "col-md-2 col-lg-1 col-form-label"  %>
      <div class="col-md-10 col-lg-6">
        <%=  form.number_field :input1, class: "form-control", value: "35" %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <%=  form.label :input2, "Value 2:", class: "col-md-2 col-lg-1 col-form-label"  %>
      <div class="col-md-10 col-lg-6">
        <%=  form.number_field :input2, min: 1, class: "form-control", value: "45" %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <div class="col-md-2 col-lg-1"></div>
      <div class="col-md-7 col-lg-5">
        <%=  form.submit "Calculate greatest common denominator", class: 'btn btn-outline-primary' %>
      </div>
    </div>
  <% end %>

  <div id="result"></div>
</div>
