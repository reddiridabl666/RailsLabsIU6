<%= form_with class: "col-8", url: "/euclid/result", method: :get do |form| %>
  <div class="form-group row my-3">
    <%= form.label :input_1, "Value 1:", class: "col-md-2 col-lg-1 col-form-label" %>
    <div class="col-md-10 col-lg-6">
      <%= form.number_field :input_1, class: "form-control"%>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :input_2, "Value 2:", class: "col-md-2 col-lg-1 col-form-label" %>
    <div class="col-md-10 col-lg-6">
      <%= form.number_field :input_2, class: "form-control"%>
    </div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-md-2 col-lg-1"></div>
    <div class="col-md-7 col-lg-5">
      <%= form.submit "Calculate greatest common denominator", class: 'btn btn-outline-primary'%>
    </div>
  </div>

<% end %>
