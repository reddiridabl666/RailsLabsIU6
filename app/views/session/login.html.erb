<% flash.each do |type, msg| %>
  <% unless type == "notice" %>
    <p class="text-danger mt-2"><%= msg %></p>
  <% end %>
<% end %>

<%= form_with url: authorize_path, local: true  do |form| %>
  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div class="mt-2 d-flex align-items-center">
    <%= form.submit class: "btn btn-primary", value: 'Login' %>
    <a href="<%= new_user_path %>" class="ms-1 link text-primary">Sign Up</a>
  </div>
<% end %>


